@model TalmerMaint.WebUI.Models.LocationHoursViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit @Model.LocHours.HoursTitle hours for @Model.Location.Name</h2>

<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.LocHours.Id)
        @Html.HiddenFor(model => model.LocHours.LocationId)

        <div class="form-group">
            @Html.LabelFor(model => model.LocHours.HoursTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LocHours.HoursTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LocHours.HoursTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LocHours.Hours, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LocHours.Hours, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LocHours.Hours, "", new { @class = "text-danger" })
            </div>
        </div>
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Cancel", "Manage", new { id = Model.Location.Id }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}



