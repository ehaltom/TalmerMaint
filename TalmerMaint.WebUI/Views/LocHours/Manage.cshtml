@using TalmerMaint.Domain.Entities
@model TalmerMaint.WebUI.Models.LocationHoursViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create Hours for @Model.Location.Name</h2>
@Html.ActionLink("Return to location", "Edit", "Locations", new { id = Model.Location.Id }, new { @class = "btn btn-default" })
<hr />
<div class="col-md-6">
    @Html.Partial("LocHourSummary", Model.Location.LocHours)
</div>
<div class="col-md-6">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(h => h.LocHours.HoursTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(h => h.LocHours.HoursTitle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(h => h.LocHours.HoursTitle, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(h => h.LocHours.Hours, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(h => h.LocHours.Hours, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(h => h.LocHours.Hours, "", new { @class = "text-danger" })
                </div>
            </div>



            <input name="LocHours.LocationId" type="hidden" value="@Model.Location.Id"/>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    @Html.ActionLink("Cancel", "Edit","Locations", new { id = Model.Location.Id }, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    }

    <div>

    </div>
</div>

