@model TalmerMaint.WebUI.Models.LocationPhonesViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>@Model.LocPhoneNums.Name Number for @Model.Location.Name</h2>
<ol class="breadcrumb">
    <li>
        @Html.ActionLink("Location", "Edit", "Locations", new { id = Model.Location.Id },null)
</li>
<li>Edit Phone</li>
</ol>
<div class="col-sm-4">
    <h3>Extensions for this number</h3>
    @if (Model != null)
            {
        <div class="sublinks" data-toggle="tooltip" data-placement="left" title="">
            @Html.ActionLink("Manage Phone Extensions", "Manage", "LocPhoneExts", new { id = Model.LocPhoneNums.Id }, new { @class = "btn btn-primary btn-sm margin-bottom-ten sublinks" })
        </div>
    }
    @Html.Partial("LocPhoneExtSummary", Model.LocPhoneNums)
</div>
<div class="col-sm-8">
    <h3>Edit Phone</h3>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.LocPhoneNums.Id)
            @Html.HiddenFor(model => model.LocPhoneNums.LocationId)

            <div class="form-group">
                @Html.LabelFor(model => model.LocPhoneNums.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LocPhoneNums.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LocPhoneNums.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.LocPhoneNums.Number, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LocPhoneNums.Number, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LocPhoneNums.Number, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    @Html.ActionLink("Cancel", "Manage", new { id = Model.LocPhoneNums.LocationId }, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    }

</div>
