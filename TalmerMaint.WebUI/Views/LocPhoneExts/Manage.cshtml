@model TalmerMaint.WebUI.Models.LocationPhoneExtensionsViewModel

@{
    ViewBag.Title = "Manage Phone Extensions";
}

<h2>Add Extension for @Model.Location.Name's phone number named "@Model.PhoneNums.Name"</h2>
<ol class="breadcrumb">
    <li>
        @Html.ActionLink("Location", "Edit", "Locations", new { id = Model.Location.Id }, null)
</li>
<li>@Html.ActionLink("Phone", "Edit", "LocPhoneNums",new { id = Model.PhoneNums.Id },null)</li>
<li>Manage Extensions</li>
</ol>
<div class="col-sm-4">
    <h3>Extensions for @Model.PhoneNums.Number</h3>

    @Html.Partial("LocPhoneExtSummary", Model.PhoneNums)
</div>
<div class="col-md-7 col-md-offset-1">
    <h3>Add Extension</h3>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(h => h.LocPhoneExts.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(h => h.LocPhoneExts.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(h => h.LocPhoneExts.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(h => h.LocPhoneExts.Number, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(h => h.LocPhoneExts.Number, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(h => h.LocPhoneExts.Number, "", new { @class = "text-danger" })
                </div>
            </div>



            <input name="LocPhoneExts.LocPhoneNumsId" type="hidden" value="@Model.PhoneNums.Id" />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    @Html.ActionLink("Cancel", "Edit", "LocPhoneNums", new { id = Model.PhoneNums.Id }, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    }

    <div>

    </div>
</div>

